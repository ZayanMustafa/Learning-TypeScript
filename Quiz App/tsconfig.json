{
  "compilerOptions": {
    "target": "es2016",                                // Specifies the target JavaScript version
    "module": "commonjs",                              // Module code generation
    "rootDir": "./Source",                             // Root folder for TypeScript files
    "outDir": "./Public",                              // Output folder for JavaScript files
    "esModuleInterop": true,                           // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,          // Ensures consistent casing in imports
    "strict": true,                                    // Enables strict type-checking options
    "skipLibCheck": true                               // Skips type checking of declaration files
  }
}
